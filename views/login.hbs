<div id="login">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="login-and-register">  

		      <a href="/auth/facebook" class="form-btn form-btn-fb"><i class="fa fa-facebook" aria-hidden="true"></i> Continue with Facebook</a>
		      <div class="separator-with-label">
		        <hr>
		        <label><span>OR</span></label>
		      </div>		

		      <ul class="tab-group">
		      	<li class="tab active"><a href="#login-section">Log In</a></li>
		        <li class="tab"><a href="#register-section">Register</a></li>
		      </ul>
		      <div class="tab-content">
		        <div id="login-section">   
		          {{!-- <h1>Welcome Back!</h1> --}}
		          <form id="login-form" action="#" method="post">
		            <div class="row">
		              <div class="col-xs-12">
	                  <div class="form-group">
	                    <input type="text" name="login-form-email" id="login-form-email" class="form-input" /> {{!-- autocomplete="off" --}}
	                    <label for="login-form-email">Email</label>
	                  </div>
	                  <div class="form-group">
	                    <input type="password" name="login-form-password" id="login-form-password" class="form-input" /> {{!-- autocomplete="off" --}}
	                    <label for="login-form-password">Password</label>
		                </div>
		              </div>
		            </div>
								<div class="row">
									<div class="col-xs-6 checkbox remember-me">
										<label><input type="checkbox" name="remember-me" value="remember-me" checked>Remember Me</label>
									</div>
									<div class="col-xs-6 forgot-password">
										<a href="#">Forgot Password?</a>
									</div>
								</div>		
								<div class="row loginTryAgainMsgContainer">
									<div class="col-xs-12">
										<p class="loginTryAgainMsg"></p>
									</div>
								</div>							
								<input type="hidden" name="_csrf" value="{{csrfToken}}">		           
		            <button type="submit" id="login-form-submit" class="form-btn">Log In</button>
		          </form>  	

		        </div>

		        <div id="register-section">   
		          {{!-- <h1>Join Us</h1> --}}
		          <form id="register-form" action="/signup" method="post">
		          	<p class="register-existing-email-message"><span class="show_msg_animation">Email already exists. </span>Already have an account? Please, <a href="#">log in.</a></p>
		            <div class="row">
		              <div class="col-xs-12">
	                  <div class="form-group">
	                    <input type="text" name="register-form-name" id="register-form-name" class="form-input" maxlength="50" autocomplete="off" />
	                    <label for="register-form-name">Username</label>
	                  </div>		              
	                  <div class="form-group">
	                    <input type="text" name="register-form-email" id="register-form-email" class="form-input" autocomplete="off" />
	                    <label for="register-form-email">Email</label>
	                  </div>
	                  <div class="form-group">
	                    <input type="password" name="register-form-password" id="register-form-password" class="form-input" autocomplete="off" />
	                    <label for="register-form-password">Password (6 or more characters)</label>
		                </div>
	                  <div class="form-group">
	                    <input type="password" name="register-form-confirm-password" id="register-form-confirm-password" class="form-input" autocomplete="off" />
	                    <label for="register-form-confirm-password">Confirm Password</label>
		                </div>		                
		              </div>	              
		            </div>   
		            <p class="register-message">By creating an account, you agree to our <a id="terms-and-conditions-link" href="#">terms & conditions</a>.</p>
		            <input type="hidden" name="_csrf" value="{{csrfToken}}">
		            <button type="submit" id="register-form-submit" class="form-btn">Create Account</button>
		          </form> 
		        </div>    
		      </div><!-- end of .tab-content -->   

				</div> <!-- end of .login-and-register -->
			</div>
		</div>
	</div>
</div>


<!-- Modal -->
<div id="generalErrorModal" class="modal fade loginErrorModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1><span class="glyphicon glyphicon-fire"></span></h1>      
        <p class="modal-title">ERROR</p>
        <p class="message">The action could not be completed.</p>
        <p class="subMessage">Keep trying and never give up <i class="fa fa-smile-o" aria-hidden="true"></i></p>
        {{!-- <p class="subMessage">Please try again in a while or feel free to <a href="/about">contact us</a> if the problem persists!</p> --}}
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>